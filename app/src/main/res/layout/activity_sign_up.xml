<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clouds"
    tools:context=".SignUpActivity">


    <ImageView
        android:id="@+id/nameImageView341"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/preferredDestinationSpinner"
        app:layout_constraintTop_toBottomOf="@+id/signUpConfirmPasswordage"
        app:srcCompat="@drawable/delivery" />


    <ImageView
        android:id="@+id/btn_to_main"
        android:layout_width="47dp"
        android:layout_height="31dp"
        android:layout_marginBottom="48dp"
        android:rotation="360"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/left" />

    <EditText
        android:id="@+id/signUpEmailage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="41dp"
        android:layout_height="39dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/signUpEmailage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mail" />
    //////////////////////////////
    <ImageView
        android:id="@+id/passwordImageView1"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/signUpFirstNameage"
        app:layout_constraintTop_toBottomOf="@+id/signUpEmailage"
        app:srcCompat="@drawable/user" />

    <EditText
        android:id="@+id/signUpFirstNameage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:hint="First Name"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpEmailage" />

    //////////////////

    <ImageView
        android:id="@+id/passwordImageView"
        android:layout_width="44dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/signUpLastNameage"
        app:layout_constraintTop_toBottomOf="@+id/signUpFirstNameage"
        app:srcCompat="@drawable/user1" />

    <EditText
        android:id="@+id/signUpLastNameage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:hint="Last Name"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpFirstNameage" />

    ///////////////////////////////////////////
    <EditText
        android:id="@+id/signUpPasswordage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpLastNameage" />

    <ImageView
        android:id="@+id/nameImageView"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/signUpPasswordage"
        app:layout_constraintTop_toBottomOf="@+id/signUpLastNameage"
        app:srcCompat="@drawable/padlock2" />
    //////////////////////////////////////
    <EditText
        android:id="@+id/signUpConfirmPasswordage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpPasswordage" />

    <ImageView
        android:id="@+id/nameImageView34"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toStartOf="@+id/signUpConfirmPasswordage"
        app:layout_constraintTop_toBottomOf="@+id/signUpPasswordage"
        app:srcCompat="@drawable/padlock2" />
    //////////////////////


    ///////////////////////


    <Spinner
        android:id="@+id/preferredDestinationSpinner"
        android:layout_width="208dp"
        android:layout_height="61dp"

        android:layout_marginTop="12dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:hint="Choose your Destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpConfirmPasswordage"
        app:srcCompat="@drawable/padlock2" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="121dp"
        android:layout_height="132dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/airplane" />
    //////

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="148dp"
        android:text="Sign up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>